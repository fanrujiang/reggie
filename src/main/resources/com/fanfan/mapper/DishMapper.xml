<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fanfan.mapper.DishMapper">
    <update id="update">
        update dish
        <set>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>


    <select id="findPage" resultType="com.fanfan.dto.DishDto">
        select a.id, a.name, a.update_time, a.image, a.status, a.price, b.name as 'category_name'
        from dish as a
        inner join category as b on a.category_id = b.id
        <where>
            <if test="name != null and name !='' ">
                and a.name like concat ('%',#{name},'%')
            </if>
        </where>
        order by update_time desc
    </select>
    <select id="getById" resultType="com.fanfan.dto.DishDto">
        select a.*,b.name as 'category_name'
        from dish as a
        inner join category as b on a.category_id = b.id
        where a.id = #{id}
    </select>
    <select id="getByCategoryId" resultType="com.fanfan.bean.Dish">
        select * from dish where category_id = #{categoryId}
    </select>
</mapper>